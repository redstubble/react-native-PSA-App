{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/no-multi-comp": 0,
    "arrow-parens": [2, "always"],
    "function-paren-newline": 0,
    "react/prefer-stateless-function": [
      2,
      {
        "ignorePureComponents": true
      }
    ],
    "comments": {
      "function-paren-newline": "due to conflict between Prettier max length"
    }
  },
  "globals": {
    "__DEV__": true
  }
}
